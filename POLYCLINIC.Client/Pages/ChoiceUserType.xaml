<Page
    x:Class="POLYCLINIC.Client.Pages.ChoiceUserType"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{StaticResource Page}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel
            Width="150"
            Height="Auto"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                Margin="0,0,0,5"
                HorizontalAlignment="Center"
                FontSize="16">
                Кто вы?
            </TextBlock>
            <ListBox IsEnabled="{Binding IsChecked, ElementName=EnableListBox}" SelectedIndex="0">
                <TextBlock>
                    Пациент
                </TextBlock>
                <TextBlock>
                    Врач
                </TextBlock>
                <TextBlock>
                    Администратор
                </TextBlock>
            </ListBox>
            <Button Margin="0,5,0,0">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
